<configuration>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with compression -->
            <fileNamePattern>logs/%d{yyyy_MM_dd}.application.log</fileNamePattern>
            <!-- keep 30 days worth of history -->
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%logger] in %thread %n%message%n%xException%n</pattern>
        </encoder>
    </appender>

    <appender name="ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/access.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with compression -->
            <fileNamePattern>logs/%d{yyyy_MM_dd}.access.log</fileNamePattern>
            <!-- keep 30 days worth of history -->
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%logger] in %thread %n%message%n%xException%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%logger] in %thread %n%message%n%xException%n
            </pattern>
        </encoder>
    </appender>

    <appender name="ASYNCFILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
    </appender>

    <appender name="ASYNCSTDOUT" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT"/>
    </appender>

    <appender name="ASYNCACCESS" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ACCESS"/>
    </appender>

    <!--<logger name="play" level="ERROR"/>-->
    <!--<logger name="application" level="ERROR"/>-->
    <!--&lt;!&ndash; Set logging for all Akka library classes to INFO &ndash;&gt;-->
    <logger name="akka" level="INFO"/>
    <logger name="com.shuyun.motor" level="DEBUG"/>
    <logger name="spray" level="ERROR"/>

    <root level="INFO">
        <appender-ref ref="ASYNCFILE"/>
        <appender-ref ref="ASYNCSTDOUT"/>
    </root>


    <logger name="access" level="INFO" additivity="false">
        <appender-ref ref="ASYNCACCESS"/>
    </logger>


</configuration>

